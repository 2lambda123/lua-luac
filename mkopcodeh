#!/usr/bin/nawk
# $Id: mkopcodeh,v 1.2 1999/03/08 11:21:16 lhf Exp lhf $ 
# make opcode.h from lopcodes.h

BEGIN {
 print "/*"
 print "** $" "Id$"
 print "** opcode info to be #included into opcode.c"
 print "** extracted automatically from lopcodes.h by mkopcodeh -- DO NOT EDIT"
 print "** See Copyright Notice in lua.h"
 print "*/"
 OFS=", "
}

/^[A-Z]/ {
	gsub("[^A-Za-z0-9-]"," ")
	name=op=class=$1; sub("W$","",class)

	     if ($2=="-")	{ args="NONE"; }
	else if ($2=="b")	{ args="B"; }
	else if ($2=="w")	{ args="W"; }
	else			{ print "#error " $0 }
	if ($3=="b" || $3=="c") { args=args "B"; }

	print "{ \"" name "\"",op,class,"ARGS_" args,"-1, -1 },"
}
